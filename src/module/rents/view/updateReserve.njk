{% extends "../../views/layout/template.njk" %}

{% block contenido %}
    {% set reserve = data.reserve %}

    {# NAVBAR #}
    {% include "../../views/layout/navbar.njk" %}
    {# NAVBAR #}

    <div class="container">
        <div class="rent-options">
            <form action="/agency/reserve/{{reserve.Car.id}}/view" method="POST">
                <input type="hidden" name="car_id" value={{reserve.Car.id}} readonly/>
                <input type="hidden" name="client_id" value={{reserve.Client.id}}>
                <input type="hidden" name="id" value={{reserve.id}}>

                <div class="content">
                    <div class"search-client">
                        <div class="contain">
                            <h3 class="title is-5 title-block">Vehiculo</h3>
                            <div>
                                <img src="/{{reserve.Car.imageUrl}}" width="256" height="256"/>
                                <input type="hidden" value="{{reserve.Car.imageUrl}}" readonly/>
                            </div>
                            <h3 class="title is-5 title-block">Selecciona la fecha</h3>

                            <div>
                                <p>Fecha de salida</p>
                                <input type="date" id="take-day" name="take-day" value={{ reserve.takeDay }}>
                                <p>Fecha de devoluci√≥n</p>
                                <input type="date" id="return-day" name="return-day" value={{ reserve.returnDay }}>
                                <button type="button" id="cost-calculator">Calcular Costo</button>
                                <h3 class="title is-5 title-block">Costo final</h3>
                                <p>Cost: </p>
                                <input type="text" id="rent-cost"  name="final-cost" value={{reserve.finalCost}} readonly>
                                <input type="hidden" name="payment" value='Cash' readonly/>
                                <input type="hidden" name="status" value='No' readonly/>
                            </div>

                            <div class="confirmation-options">
                                <div class="field is-grouped">
                                    <div class="control">
                                        <button class="button is-link">Submit</button>
                                    </div>
                                    <div class="control">
                                        <button class="button is-link is-light">Cancel</button>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>      
                </div>

                
            </form>
        </div>
    </div>
    <script src="/public/scripts/costCalculatorButton.js"></script>
    <script src="/public/scripts/clientFinder.js"></script>
{% endblock %}
