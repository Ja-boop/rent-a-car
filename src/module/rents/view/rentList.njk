{% extends "../../views/layout/template.njk" %}

{% block contenido %}

{# NAVBAR #}
{% include "../../views/layout/navbar.njk" %}
{# NAVBAR #}

<div class="contain">
<div class="container">
    <div class="lista-vehiculos"> 
    <table class="table is-fullwidth">

    <thead>
    <tr>
      <th><abbr title="Id">Id</abbr></th>
      <th>Image</th>
      <th><abbr title="Brand">Brand</abbr></th>
      <th><abbr title="Model">Model</abbr></th>
      <th><abbr title="Year">Year</abbr></th>
      <th><abbr title="Kilometers">Kms</abbr></th>
      <th><abbr title="Colors">Colors</abbr></th>
      <th><abbr title="AirConditioner">AC</abbr></th>
      <th><abbr title="Passengers">Pass</abbr></th>
      <th><abbr title="Transmission">Trans</abbr></th>
      <th><abbr title="Cost">Cost</abbr></th>
      <th><abbr title="Actions">Actions</abbr></th>
    </tr>
    </thead>
    <tfoot>
    <tr>
      <th><abbr title="Id">Id</abbr></th>
      <th>Image</th>
      <th><abbr title="Brand">Brand</abbr></th>
      <th><abbr title="Model">Model</abbr></th>
      <th><abbr title="Year">Year</abbr></th>
      <th><abbr title="Kilometers">Kms</abbr></th>
      <th><abbr title="Colors">Colors</abbr></th>
      <th><abbr title="AirConditioner">AC</abbr></th>
      <th><abbr title="Passengers">Pass</abbr></th>
      <th><abbr title="Transmission">Trans</abbr></th>
      <th><abbr title="Cost">Cost</abbr></th>
      <th><abbr title="Actions">Actions</abbr></th>
    </tr>
    </tfoot>
    <tbody>
        {%for cars in data.cars%}
        <tr>
        <th>{{cars.id}}</th>
        <td><img src="\{{cars.imageUrl}}" width="150" height="250"/></td>
        <td>{{cars.brand}}</td>
        <td>{{cars.model}}</td>
        <td>{{cars.yearManufactured}}</td>
        <td>{{cars.kms}}</td>
        <td>{{cars.color}}</td>
        <td>{{cars.airConditioner}}</td>
        <td>{{cars.passengers}}</td>
        <td>{{cars.transmission}}</td>
        <td>{{cars.cost}}</td>
        <td>
          <br>
          <a href="http://localhost:8080/agency/rent/car/{{cars.id}}">Rent!</a>
        </td>
        </tr>
        {%endfor%}
    </tbody>

    </table>
    </div>
</div>
</div>

{% endblock %}
