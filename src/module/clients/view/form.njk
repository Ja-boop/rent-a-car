{% extends "../../views/layout/template.njk" %}

{% block contenido %}
    {% set car = data.car %}

    {# NAVBAR #}
    {% include "../../views/layout/navbar.njk" %}
    {# NAVBAR #}

    {# FONDO #}
    <div class="container-create-client">

        <div class="box cuadro-opciones-form">
            <form action="/agency/create/client" method="POST">
                <input type="hidden" name="id" value="{{client.id}}" readonly/>
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control">
                        <input class="input" type="text" name="name" value="{{client.name}}">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Last Name</label>
                    <div class="control">
                        <input class="input" type="text" name="last-name" value="{{client.lastName}}">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Indentifier Type</label>
                    <div class="control">
                        <div class="select">
                            <select name="identifier-type" value="{{car.airConditioner}}">
                                <option>DNI</option>
                                <option>CUIT</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Identifier Number</label>
                    <div class="control">
                        <input class="input" type="number" name="identifier-number" value="{{client.identifierNumber}}">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Nationality</label>
                    <div class="control">
                        <input class="input" type="text" name="nationality" value="{{client.nationality}}">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Address</label>
                    <div class="control">
                        <input class="input" type="text" name="address" value="{{client.address}}">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Phone</label>
                    <div class="control">
                        <input class="input" type="number" name="phone" value="{{client.phone}}">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Email</label>
                    <div class="control">
                        <input class="input" type="email" name="email" value="{{client.email}}">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Birthday</label>
                    <div class="control">
                        <input class="input" type="date" name="birthday" value="{{client.birthday}}">
                    </div>
                </div>
                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link">Submit</button>
                    </div>
                    <div class="control">
                        <button class="button is-link is-light">Cancel</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    {# FONDO #}

{% endblock %}